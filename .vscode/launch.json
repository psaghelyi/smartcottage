    "version": "0.2.0",
    "configurations": [
        {
            "name": "smartcottage",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/smartcottage",
            "args": [
                "--host=0.0.0.0",
                "--port=12345",
                "--workers=1",
                "--timeout=200",
                "--certfile=.cert/psaghelyi_ddns_net.pem",
                "--keyfile=.cert/psaghelyi_ddns_net.key"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "migrate_db",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/migrate_db",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}